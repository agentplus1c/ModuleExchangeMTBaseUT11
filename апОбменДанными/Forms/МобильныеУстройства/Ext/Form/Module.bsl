	Для каждого Элемент Из стррРеквизиты Цикл
		СтрокаТ[Элемент.Ключ] = стррМУ[Элемент.Значение];
	КонецЦикла; 
	Если СтрокаТ.ДатаРегистрации = Дата(1, 1, 1) Тогда
		СтрокаТ.ДатаРегистрации = ТекущаяДата();
	КонецЕсли;
	СтрокаТ.ЗагруженИзЛК = Истина;	
	
